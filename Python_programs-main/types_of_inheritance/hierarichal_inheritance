#hierarichal inheritance
# When more than one derived class are created from a single base this type of inheritance is called hierarchical inheritance.
class First_class:
    def func1(self):
        print("I AM THE HEAD OF THE CLASSES")



#derived class 1
class child1(First_class):
    def func2(self):
        print("I AM CHILD 1 OF HEAD")



#derived class 2
class child2(First_class):
    def func3(self):
        print("I AM CHILD 2 OF HEAD")


# object creation
obj1 = child1()
obj2 = child2()
obj1.func1()
obj1.func2()

obj2.func1()
obj2.func3()
